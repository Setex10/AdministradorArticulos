doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./styles/styles.css")
        title=title
    body
        main(class="flex justify-center items-center h-screen w-full")
            form(class="h-3/4 w-3/4 bg-slate-800 flex flex-col justify-around items-center rounded-2xl p-3", 
            action=`${action}`, method="POST", id="loginForm")
                h1(class="text-3xl text-cyan-100")=title
                div(class="flex flex-col justify-around items-center h-3/4 w-full")    
                    label(class=`labelStyle w-3/4 flex flex-col text-cyan-100
                    border p-2 rounded-2xl transition duration-500 ease-linear`) Usuario 
                        input(class="bg-transparent placeholder:text-slate-200/50 focus:outline-none", type="text", name="username", placeholder="Nombre de usuario")
                    label(class=`labelStyle w-3/4 flex flex-col text-cyan-100
                    border p-2 rounded-2xl transition duration-500 ease-linear`) Contraseña
                        input(class="bg-transparent placeholder:text-slate-200/50 focus:outline-none", type="password", name="password", placeholder="Ingrese su contraseña")
                    button(class=`w-3/4 p-2 mt-2 ${colorButton} hover:${colorButtonHover} text-cyan-100 rounded-2xl `,type="submit")=msgButton
                    a(href=`${href}`, 
                    class="text-cyan-100 hover:text-cyan-200 text-sm m-2")=msgATag
                        span(class=colorSpan)=msgSpanTag

        script(src=`${srcScript}`) 
                    